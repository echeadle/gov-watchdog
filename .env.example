# ===========================================
# Gov Watchdog Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Django Configuration
# ===========================================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# MongoDB Configuration
# ===========================================

# Option 1: Local Docker MongoDB (default)
# The docker-compose.yml uses this automatically
MONGO_PASSWORD=devpassword
MONGODB_DB=gov_watchdog

# Option 2: MongoDB Atlas (cloud) - uncomment and set for production
# MONGODB_URI=mongodb+srv://echeadle_db_user:<db_password>@gov-watch.xetlb9w.mongodb.net/?appName=Gov-Watch
# Replace <db_password> with your actual MongoDB Atlas password

# ===========================================
# External API Keys (REQUIRED)
# ===========================================

# Congress.gov API
# Register at: https://api.congress.gov/sign-up
CONGRESS_API_KEY=your-congress-api-key

# Anthropic API (for AI Agent)
# Get key at: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# Optional API Keys
# ===========================================

# Federal Election Commission (FEC) API
# Register at: https://api.open.fec.gov/developers/
# FEC_API_KEY=your-fec-api-key

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# Optional: Redis Cache (for future use)
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Optional: Sentry Error Tracking
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# Production Settings (uncomment for prod)
# ===========================================
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
